    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@myhrvold/eslint-config": "workspace:*",
    "@myhrvold/prettier-config": "workspace:*",
    "@myhrvold/tsconfig": "workspace:*",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
